# Basis image
FROM python:3.10-slim

# Basis dependencies voor headless Chrome
RUN apt-get update && apt-get install -y \
    curl unzip wget gnupg xvfb jq \
    libnss3 libx11-xcb1 libxcomposite1 libxcursor1 libxdamage1 libxi6 libxtst6 \
    libxrandr2 libasound2 libatk1.0-0 libatk-bridge2.0-0 libcups2 \
    libdrm2 libdbus-1-3 libgbm1 libgtk-3-0 libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

# Install latest Chrome-for-Testing + ChromeDriver
RUN LATEST=$(curl -sS https://googlechromelabs.github.io/chrome-for-testing/latest-linux.json | jq -r '.version') && \
    echo "Installing Chrome-for-Testing version $LATEST" && \
    wget -O /tmp/chrome.zip https://edgedl.me.gvt1.com/edgedl/chrome/chrome-for-testing/$LATEST/linux64/chrome-linux64.zip && \
    unzip /tmp/chrome.zip -d /opt/ && \
    mv /opt/chrome-linux64 /opt/chrome && \
    rm /tmp/chrome.zip && \
    wget -O /tmp/chromedriver.zip https://edgedl.me.gvt1.com/edgedl/chrome/chrome-for-testing/$LATEST/linux64/chromedriver-linux64.zip && \
    unzip /tmp/chromedriver.zip -d /usr/local/bin/ && \
    mv /usr/local/bin/chromedriver-linux64/chromedriver /usr/local/bin/chromedriver && \
    chmod +x /usr/local/bin/chromedriver && \
    rm -rf /tmp/chromedriver.zip /usr/local/bin/chromedriver-linux64

# Python dependencies
COPY requirements.txt /app/
RUN pip install --upgrade pip && pip install --no-cache-dir -r /app/requirements.txt

# App code
WORKDIR /app
COPY . /app

# Environment variable voor GCS bucket
ENV BUCKET_NAME=scrapes_cvmatcher

# Run scraper
CMD ["python3", "daily_scraper.py"]
